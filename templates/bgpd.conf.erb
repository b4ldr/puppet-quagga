!
hostname <%= @fqdn %>
!
router bgp <%= @my_asn %>
!
 bgp router-id <%= @router_id %>
 <%- if @networks4 then -%>
  <%- @networks4.each do |network| -%>
 network <%= network %>
  <%- end -%>
<%- end -%>
!
<% @peers.each_pair do |as, config| -%>
  <%- if config['addr4'] then -%>
    <%- config['addr4'].each do |addr| -%>
      <%- if addr then -%>
 neighbor <%= addr %> remote-as <%= as %>
 neighbor <%= addr %> soft-reconfiguration inbound
 neighbor <%= addr %> prefix-list prefix-v4 out
        <%- if config['desc'] then -%>
 neighbor <%= addr %> description <%= config['desc'] %>
        <%- end -%>
        <%- if config['localpref'] then -%>
 neighbor <%= addr %> route-map LOCALPREF-<%= as %> in
        <%- end -%>
        <%- if config['community'] then -%>
 neighbor <%= addr %> route-map COMMUNITY-<%= as %> out
        <%- end -%>
        <%- if config['multihop'] then -%>
 neighbor <%= addr %> ebgp-multihop <%= config['multihop'] %>
        <%- end -%>
      <%- end -%>
    <%- end -%>
  <%- end -%>
  <%- if config['addr6'] then -%>
    <%- config['addr6'].each do |addr| -%>
      <%- if addr then -%>
 neighbor <%= addr %> remote-as <%= as %>
 no neighbor <%= addr %> activate
        <%- if config['desc'] then -%>
 neighbor <%= addr %> description <%= neighbour['desc'] %>
        <%- end -%>
        <%- if config['localpref'] then -%>
 neighbor <%= addr %> route-map LOCALPREF-<%= as %> in
        <%- end -%>
        <%- if config['community'] then -%>
 neighbor <%= addr %> route-map COMMUNITY-<%= as %> out
        <%- end -%>
        <%- if config['multihop'] then -%>
 neighbor <%= addr %> ebgp-multihop <%= neighbour['multihop'] %>
        <%- end -%>
!
 address-family ipv6
  neighbor <%= addr %> activate
  neighbor <%= addr %> soft-reconfiguration inbound
  neighbor <%= addr %> prefix-list prefix-v6 out
        <%- if @networks6 then -%>
          <%- @networks6.each do |network| -%>
  network <%= network %>
          <%- end %>
        <%- end %>
 exit-address-family
      <%- end -%>
    <%- end -%>
  <%- end -%>
<%- end -%>
!
<% if ! @enable_advertisements then -%>
ip prefix-list prefix-v4 seq 1 deny any
ipv6 prefix-list prefix-v6 seq 1 deny any
<%- end -%>
!
<%- if @networks4 then -%>
  <%- @networks4.each_with_index do |network, index| -%>
ip prefix-list prefix-v4 seq <%= index + 2 %> permit <%= network %>
  <%- end %>
<%- end %>
!
<%- if @networks6 then -%>
  <%- @networks6.each_with_index do |network, index| -%>
ipv6 prefix-list prefix-v6 seq <%= index + 2 %> permit <%= network %>
  <%- end %>
<%- end %>
!
<% @peers.each_pair do |as, config| -%>
  <%- if config['localpref'] -%>
route-map LOCALPREF-<%= as %> permit 10
  set local-preference <%= config['localpref'] %>
  <%- end -%>
!
  <%- if config['community'] -%>
route-map COMMUNITY-<%= as %> permit 10
  set community <%= config['community'] %>
  <%- end -%>
!
<%- end -%>
line vty
!
